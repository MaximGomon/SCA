@section content_header{
    <h1><img src="~/Content/themes/admin/img/massmails.png" />  Мероприятия</h1>
    @Html.GetBreadcrumb("fa fa-dashboard", null, "Развитие", "Мероприятия")
}

@section content_box_header{
    <div class="row">
        <div class="col-md-6">
            <div class="btn-group btn-group-sm">
                <button class="btn btn-success" type="button">Добавить мероприятие <i class="fa fa-plus-circle"></i></button>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Статус мероприятия
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#">Текущие</a></li>
                        <li><a href="#">Проведены</a></li>
                        <li><a href="#">Отменены</a></li>
                        <li><a href="#">Все</a></li>
                    </ul>

                </div>
            </div>

        </div>
        <div class="col-md-6">
            <div class="input-group input-group-sm">
                <input type="text" class="form-control form" placeholder="Поиск по ключевым словам">
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button">Поиск <i class="fa fa-search"></i></button>
                </span>
            </div>
        </div>
    </div>

    <hr class="hr-top" />
}
<div class="text-center">Нет записей</div>

